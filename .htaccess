# Enable Rewrite Engine
RewriteEngine On

# Remove .html extension from URLs
# If the requested file doesn't exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Add .html extension internally
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Redirect .html URLs to extensionless URLs
RewriteCond %{THE_REQUEST} ^GET\ /[^?\s]+\.html
RewriteRule ^(.*)\.html$ /$1 [R=301,L,NE]

# Prevent direct access to .html files (optional)
# RewriteCond %{THE_REQUEST} \.html
# RewriteRule ^(.*)\.html$ /$1 [R=301,L]
